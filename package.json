{
  "name": "prompt-scrubber",
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "gen": "node src/build.mjs",          
    "build": "npm run gen && npx webpack",
    "dev": "npx webpack --mode development --watch",
    "package": "npm run build && node scripts/package.mjs",
    "preversion": "npm test",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "webpack": "^5.98.0",
    "webpack-cli": "^5.1.4",
    "babel-loader": "^9.1.3",
    "archiver": "^7.0.1"
  }
}